<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.lsc.familialaureana.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />
        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo"
                    android:id="@+id/imageView"
                    android:contentDescription=""
                    tools:ignore="ContentDescription" />

                <TextView
                    android:text="@string/laura_de_santa_catalina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/textView2"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:textColor="@color/colorRojo"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/text_size_standard"/>

                <TextView
                    android:text="@string/i_e_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="17dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView"
                    android:textColor="@color/colorRojo"
                    android:textStyle="normal|bold"
                    android:textSize="@dimen/text_size_standard"/>
            </RelativeLayout>

            <TextView
                android:text="@string/bienvenido_a"
                android:layout_marginTop="@dimen/layout_marginTop2"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:textColor="@color/colorRojo"
                android:textStyle="normal|bold"
                android:textSize="@dimen/text_size_bienvenido" />

            <TextView
                android:text="@string/mensale"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_standard"/>

                <TableLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"
                android:layout_height="match_parent"
                tools:ignore="RtlHardcoded">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/mensaje"
                        android:id="@+id/imageMensaje"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/mensaje"
                        android:textSize="@dimen/text_size_standard" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageLlamada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/llamar"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/llamar"
                        android:textSize="@dimen/text_size_standard"
                        tools:ignore="RtlHardcoded" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ubicacion"
                        android:id="@+id/imageUbicacion"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:text="@string/ver_ubicaion_en_mapa"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textSize="@dimen/text_size_standard"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageVisita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/web"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="@string/visita_nuestro_sitio_web"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textSize="@dimen/text_size_standard"/>
                </TableRow>
            </TableLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="@dimen/layout_marginTop">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/imageView13"
                        android:layout_toRightOf="@+id/imageView13"
                        android:text="@string/facebook"
                        android:textSize="@dimen/text_size_standard"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/imageView13"
                        android:layout_toRightOf="@+id/imageView13"
                        android:text="@string/entra_a_nuestra_red_social"
                        android:textSize="@dimen/text_size_standard1"
                        tools:ignore="SmallSp" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@+id/textView16"
                        android:layout_toRightOf="@+id/textView16"
                        app:srcCompat="@drawable/edmodo"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/imageView14"
                        android:layout_toRightOf="@+id/imageView14"
                        android:text="@string/entra_a_nuestra_plataforma"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        app:srcCompat="@drawable/face"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginStart="9dp"
                        android:layout_toEndOf="@+id/imageView14"
                        android:layout_toRightOf="@+id/imageView14"
                        android:text="@string/edmodo"
                        android:textSize="@dimen/text_size_standard" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/layout_marginTop"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnIniciarSesion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorRojo"
                        android:text="@string/inicio"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/text_size_standard"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btnRegistrase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorRojo"
                        android:text="@string/registrarse"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/text_size_standard"
                        tools:ignore="ButtonStyle" />
                </LinearLayout>
            </LinearLayout>




        </ScrollView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
