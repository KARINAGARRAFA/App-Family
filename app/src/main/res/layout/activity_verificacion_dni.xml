<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.lsc.familialaureana.VerificacionDni">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/verifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@android:color/black" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                app:srcCompat="@drawable/logo1"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:contentDescription=""
                tools:ignore="ContentDescription,InefficientWeight" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dni"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="@string/verificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/btnDocente"
                android:background="@color/colorNaranja"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:textSize="@dimen/text_size_standard2" />
            <TextView
                android:text="@string/iniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textREgistrase"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_standard"
                android:textColor="@android:color/holo_red_dark" />
            <Button
                android:text="@string/ya_tengo_mi_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@color/colorRojo"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:textSize="@dimen/text_size_standard2"
                android:id="@+id/btnYaCuanta" />



        </LinearLayout>



    </ScrollView>
</android.support.constraint.ConstraintLayout>
